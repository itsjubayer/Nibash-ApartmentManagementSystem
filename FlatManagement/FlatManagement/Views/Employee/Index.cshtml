@model IEnumerable<FlatManagement.Models.EmployeeVM>

@{
    ViewData["Title"] = "Index";
}

<h1>Employee List</h1>
<hr />

<table class="table  table-hover" id="flatdatatable">
    <thead>
        <tr style="background-color: #f7ecfd" >
            <th>
                Sl.
            </th>
            <th>@Html.Label("Name")</th>
            <th>
                @Html.DisplayNameFor(model => model.Designation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mobile)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JoiningDate)
            </th>

            <th>
                <a asp-action="AddOrEdit" class="btn btn-outline-success"><i class="far fa fa-plus-square"></i>Employee</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @{ int rowNo = 0; }
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @{rowNo++;} @rowNo
                </td>
                <td>
                    <img src="~/images/@item.PicLoc"
                         class="rounded-circle"
                         height="40" width="40"
                         asp-append-version="true" />
                    @item.FirstName @item.LastName
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Designation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mobile)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.JoiningDate)
                </td>
                <td>
                    <a asp-action="AddOrEdit" asp-route-id="@item.Id"><i class="fas fa-marker fa-lg"></i></a> |
                    <a asp-action="ViewEmpData" asp-route-id="@item.Id"><i class="fas fa-marker fa-eye"></i></a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="text-danger ml-1" onclick="return confirm('Are you sure to delete this record?')"><i class="fas fa-trash-alt fa-lg"></i></a>
                </td>

            </tr>
        }
    </tbody>
</table>
@section Scripts
{
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.11.3/datatables.min.css" />

    <script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.11.3/datatables.min.js"></script>

    <script>
        $(document).ready(function () {
            $("#flatdatatable").DataTable();
        }
        )
    </script>
}