@model FlatManagement.Models.EmployeeVM
@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Create";
}

<style>
    @@media print {
        .no-print {
            display: none;
        }
    }
</style>


<h4>Employee Form</h4>

<hr />
    <form asp-controller="Employee" asp-action="AddOrEdit" method="post" enctype="multipart/form-data">
        
            <div class="col-md-12">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="EntryDate" />
                <input type="hidden" asp-for="EntryBy" id="EntryBy" name="EntryBy" value=" @User.Identity.Name" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        @if (@Model.PicLoc != null)
                        {
                            <img src="~/images/@Model.PicLoc" alt="Image" style="width:100px;height:150px;">
                        }
                        else
                        {
                            <img src="~/images/no_image.png" alt="Image" style="width:100px;height:150px;">
                        }

                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        @Html.Label("Name: ")
                        @Model.FirstName @Model.LastName
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="Designation" class="control-label"></label>
                        @Model.Designation
                        <span asp-validation-for="Designation" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="Email" class="control-label"></label>
                        @Model.Email
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label asp-for="Mobile" class="control-label"></label>
                        @Model.Mobile
                        <span asp-validation-for="Mobile" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="Type" class="control-label"></label>
                        @Model.Type
                        <span asp-validation-for="Type" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="EmpNID" class="control-label"></label>
                        @Model.EmpNID
                        <span asp-validation-for="EmpNID" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="Status" class="control-label"></label>
                        @Model.Status
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="JoiningDate" class="control-label"></label>
                        @Html.DisplayFor(x => x.JoiningDate)
                        <span asp-validation-for="JoiningDate" class="text-danger"></span>
                    </div>

                </div>

                <div class="form-row no-print">
                    <div class="form-group col-md-6">
                        <input type="button" onclick="javascript:window.print()" value="Print" class="btn btn-primary btn-block" />
                    </div>
                    <div class="form-group col-md-6">
                        <a asp-action="Index" class="btn btn-secondary btn-block"><i class="fa fa-table"></i>Back to List</a>
                    </div>
                </div>
            </div>

    </form>


    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

        <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
        <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
        <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
        <script>
            $(function () {
                /* format: 'dd/mm/yyyy'*/
                $("#JoiningDate").datepicker();
            });
        </script>
    }
