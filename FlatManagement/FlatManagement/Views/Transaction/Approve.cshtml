    <script>
        $(function () {
            $("#datepicker").datepicker();
        });
    </script>


    <script>
        $(document).ready(function () {
            $("input[name$='TransactionCategory']").click(function () {
                var test = $(this).val();

                $("div.desc").hide();
                $("#TransactionCategory" + test).show();
            });
        });
    </script>


    <script>
        function display() {
            window.print();
        }
    </script>

